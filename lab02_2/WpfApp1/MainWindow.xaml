        </ComboBox>
        <Image Name="picture4" HorizontalAlignment="Left" Height="99" Margin="533.031,121,0,0" VerticalAlignment="Top" Width="151" Grid.Column="1"/>
        <Image Name="picture5" HorizontalAlignment="Left" Height="95" Margin="533.031,238,0,0" VerticalAlignment="Top" Width="151" Grid.Column="1"/>
        <Label Content="Выбор канала:" HorizontalAlignment="Left" Height="27" Margin="22.031,306,0,0" VerticalAlignment="Top" Width="108" Grid.Column="1"/>

    </Grid>
</Window>
